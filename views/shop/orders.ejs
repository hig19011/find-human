<!DOCTYPE html>
<html lang="en">
<%- include('../includes/head.ejs'); %>
<body>
    <%- include('../includes/nav.ejs'); %>
<main>
    <%- include('../includes/message.ejs'); %>
    <div class="onecol">
    <% if (data.length <= 0) { %>
        <h1>No orders yet!</h1>
    <% } else { %>    
        <table>
        <% data.forEach(order=>{ %>
            <tr><td>Order - #<%= order._id %></td>
                <td>
                    <ul class="order-list">
                        <% order.items.forEach(p => { %>
                            <li class="order-item"><%= p.book.title %> (<%= p.quantity %>)</li>
                        <% }); %>
                    </ul>
                </td>
            </tr>
        <% }); %>
        </table>
    <% } %>
    </div>  
</main>
</body>
</html>